
<div class="form-inline" id="new-issue-range-form">
    <%= form_for([@title, @issue_range], :remote => true) do |f| %>
        <% if @issue_range.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@issue_range.errors.count, "error") %> prohibited this issue range from being saved:</h2>
                <ul>
                <% @issue_range.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
                </ul>
            </div>
        <% end %>

        <h4>Add issues:</h4> 
        <%= f.text_field :low, :placeholder => "First issue in series", :id => "low-text-field" %>
        <%= f.text_field :high, :placeholder => "Last issue in series, optional", :id => "high-text-field" %>
        <button type="submit" id="add-button" class="btn">Add</button>
        <button type="cancel" id="done-button" class="btn">Done</button>
    <% end %>
</div>